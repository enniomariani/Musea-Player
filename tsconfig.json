{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": false,
    "declaration": false,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "main/*": ["src/main/*"],
      "renderer/*": ["src/renderer/*"]
    }
  },
  "include": ["src/**/*.ts","src/renderer/global.d.ts", "tests/**/*.ts"],
}